    {
        $.ajax({
            type: "GET",
            url: '@Url.Action("View", "Home")',
            data: ({ 'surveyId': surveyId }),
            beforeSend: function () {
                $("#loadingScreen").css("display", "block");
            },
            success: function (data) {
                
            }
        });
    }*@
</script>


<div>
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Manage Survey</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="question" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                              <th>SurveyID</th>
                                <th>Surveyor</th>
                                <th>Department</th>
                                <th>PumpName</th>
                                <th>Category</th>
                                <th>Remarks</th>
                                <th>On</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="tbody"></tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
</div>
