
<div>
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">ManageSurvey</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <table id="question" class="table table-bordered table-striped">
            <thead>
              <tr>
                <th>Sr#</th>
                <th>Question</th>
                <th>Answers</th>
                <th>Image</th>
              </tr>
            </thead>
            <tbody>
              @if (ViewBag.Answers != null)
              {
                int count = 1;
                foreach (var loop in ViewBag.Answers)
                {

                  <tr>
                    <td>@count</td>
                    <td>@loop.Text</td>
                    <td>@loop.Answer</td>
                    <td>
                     <img src="@loop.ImagePath" alt="no image" style="width: 50px;height: 50px;" />
                    </td>
                    
                  </tr>
                  count++;
                }
              }
            </tbody>
          </table>
        </div>
        <!-- /.box-body -->
      </div>
    </div>
  </div>
</div>
<script>
    $(document).ready(function () {
      $('#question').DataTable();
    });
</script>







