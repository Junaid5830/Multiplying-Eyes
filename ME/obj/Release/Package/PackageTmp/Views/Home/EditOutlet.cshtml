@model  ME.Models.RetailOutlet
@{
    ViewBag.Title = "Edit RetailOutlets";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Edit Retail Outlets</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    @using (Html.BeginForm("ModifyRetailOutlet", "Home" ,FormMethod.Post))
                    {
                        @Html.TextBox("RetailOutletId", null, new { @class = "", @Id = "RetailOutletId", @style = "display:none" })
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    @Html.LabelFor(model => model.Name, new { @class = "input-height" })
                                    @Html.TextBox("Name", null, new { @class = "form-control input-height", @placeholder = "PumpName", @Id = "Name", @required = "required" })
                                    @Html.ValidationMessageFor(model => model.Name, String.Empty, new { @class = "Validation-color" })
                                </div>
                                <div class="col-md-4">
                                    @Html.LabelFor(model => model.SapCode, new { @class = "input-height" })
                                    @Html.TextBox("SapCode", null, new { @class = "form-control input-height", @placeholder = "SapCode", @type = "number", @Id = "SapCode", @required = "required" })
                                    @Html.ValidationMessageFor(model => model.SapCode, String.Empty, new { @class = "Validation-color" })
                                </div>
                                <div class="col-md-4">
                                    @Html.LabelFor(model => model.Latitude, new { @class = "input-height" })
                                    @Html.TextBox("Latitude", null, new { @class = "form-control input-height", @type = "number", @placeholder = "Latitude", @Id = "Latitude", @required = "required" })
                                    @Html.ValidationMessageFor(model => model.Latitude, String.Empty, new { @class = "Validation-color" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    @Html.LabelFor(model => model.Longitude, new { @class = "input-height" })
                                    @Html.TextBox("Longitude", null, new { @class = "form-control input-height", @placeholder = "Longitude", @type = "number", @Id = "Longitude", @required = "required" })
                                    @Html.ValidationMessageFor(model => model.Longitude, String.Empty, new { @class = "Validation-color" })
                                </div>
                                <div class="col-md-4">
                                    <label>Select Area*</label>
                                    @Html.DropDownList("AreaId", (IEnumerable<SelectListItem>)ViewBag.AreaId, new { @class = "form-control", @Id = "AreaType", })
                                    @*@Html.ValidationMessageFor(model => model.user.UserTypeId, String.Empty, new { @class = "Validation-color" })*@
                                </div>
                                <div class="col-md-4">
                                    @Html.LabelFor(model => model.Address, new { @class = "input-height" })
                                    @Html.TextArea("Address", null, new { @class = "form-control input-height", @placeholder = "Designation", @Id = "Designation", @required = "required" })
                                    @Html.ValidationMessageFor(model => model.Address, String.Empty, new { @class = "Validation-color" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-3 pull-right">
                                    <button type="button" id="CancelButton" class="btn btn-warning pull-right"> Cancel </button>
                                    <button type="submit" id="SubmitButton" class="btn btn-primary pull-right" style="margin-right: 5px;">Save </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

