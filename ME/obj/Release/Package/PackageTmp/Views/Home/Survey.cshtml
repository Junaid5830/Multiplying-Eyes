@model  ME.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Survey";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Survey</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">


                    <div class="form-group">
                        <div class="col-md-12">
                            @{

                                if (ViewBag.Region != null)
                                { 
                                    <div class="col-md-4">
                                        <label>Region*</label>
                                        @Html.DropDownList("RegionId", (IEnumerable<SelectListItem>)ViewBag.Region, new { @class = "form-control", @Id = "RegionId" })

                                    </div>
                                }
                                if (ViewBag.Area != null)
                                {
                                    <div class="col-md-4">
                                        <label>Area*</label>
                                        @Html.DropDownList("AreaId", (IEnumerable<SelectListItem>)ViewBag.Area, new { @class = "form-control", @Id = "AreaId" })

                                    </div>
                                }
                            }
                            

                            

                            <div class="col-md-4">
                                <label>RetailOutlets*</label>
                                @Html.DropDownList("PumpId", (IEnumerable<SelectListItem>)ViewBag.Pump, new { @class = "form-control", @Id = "PumpId" })
                            </div>
                            <div class="col-md-4">
                                <label>Departments*</label>
                                @Html.DropDownList("DeptId", (IEnumerable<SelectListItem>)ViewBag.Departments, new { @class = "form-control", @Id = "DeptId" })
                            </div>
                            <div class="col-md-4">
                                <label>Categories</label>
                                @Html.DropDownList("CatId", (IEnumerable<SelectListItem>)ViewBag.Categories, new { @class = "form-control", @Id = "CatId" })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="col-md-3 pull-right">
                                <button type="submit" id="SubmitButton" class="btn btn-primary pull-right" style="margin-right: 5px;">Search </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script>


    $(document).ready(function () {
        
        $('#SubmitButton').click(function () {
            
            //$('#question').dataTable().fnClearTable();
            var model = {
                "regionId": $('#RegionId').val(),
                "areaId": $('#AreaId').val(),
                "pumpId": $('#PumpId').val(),
                "deptId": $('#DeptId').val(),
                "catId": $('#CatId').val()
            }
            //var RetailOutletId = $('#PumpId').val();
            //if (RetailOutletId != "") {
               
                $.ajax({
                    type: "Post",
                    url: '@Url.Action("GetAllSurveys", "Home")',
                    data: ({ 'model': model }),
                    beforeSend: function () {

                    },
                    success: function (data) {
                        $('#tbody').html('');
                        //$('#question').DataTable().clear();
                        
                        var i = 0;
                        jQuery.each(data, function (i, v) {
                            $('#tbody').append('<tr><td>' + v.SurveyId + '</td><td>' + v.Name + '</td><td>' + v.DepartmentName + '</td><td>' + v.PumpName + '</td><td>' + v.Category + '</td><td>' + v.Remarks + '</td><td>' + v.CreatedOn + '</td><td><a target="_blank" style="margin-right: 5px;" href = "View?surveyId=' + v.SurveyId + '">View</a></td></tr>');
                        });
                        $('#question').DataTable();
                        
                    }
                    

                });
            //}
        });
        $('#RegionId').change(function () {
            var portalid = $(this).val();
            if (portalid != "") {
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("GetAllAreaRegionWise", "Home")',
                    data: ({ 'RegionId': portalid }),
                    beforeSend: function () {
                        //$("#loadingScreen").css("display", "block");
                    },
                    success: function (data) {
                        //$("#loadingScreen").css("display", "none");
                        $('#AreaId').html('<option value="0">--Select Area--</option>');
                        jQuery.each(data, function (i, v) {
                            $('#AreaId').append('<option value="' + v.AreaId + '">' + v.Name + '</option>');
                        });
                    }
                });
            }
        });

        $('#AreaId').change(function () {
            var portalid = $(this).val();
            if (portalid != "") {
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("GetAllOutletsAreaWise", "Home")',
                    data: ({ 'AreaId': portalid }),
                    beforeSend: function () {
                        //$("#loadingScreen").css("display", "block");
                    },
                    success: function (data) {
                        //$("#loadingScreen").css("display", "none");
                        $('#PumpId').html('<option value="0">--Select Pumps--</option>');
                        jQuery.each(data, function (i, v) {
                            $('#PumpId').append('<option value="' + v.RetailOutletId + '">' + v.Name + '</option>');
                        });
                    }
                });
            }
        });



    });
