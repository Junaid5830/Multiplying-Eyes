<!-- ADD THE CLASS fixed TO GET A FIXED HEADER AND SIDEBAR LAYOUT -->
<!-- the fixed layout is not compatible with sidebar-mini -->
<body class="hold-transition skin-blue fixed sidebar-mini">
    <!-- Site wrapper -->
    <div id="loadingScreen">
        <img class="loadingIcon" src="~/Content/ajaxLoader.gif" />
        @*<span id="loadingMsg">Loading...</span>*@
    </div>
    <div class="wrapper">
        <header class="main-header">
            <a class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"></span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>ME</b>Admin</span>
            </a>

            <nav class="navbar navbar-static-top">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="navbar-custom-menu">

                    <ul class="nav navbar-nav">

                        <!-- User Account: style can be found in dropdown.less -->
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="~/Content/Images/icon_512x512.png" class="user-image" alt="User Image">
                                <span class="hidden-xs">@Convert.ToString(Session["UserName"])</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    <img src="~/Content/Images/icon_512x512.png" class="img-circle" alt="User Image">
                                    <p>
                                        @Convert.ToString(Session["UserName"])
                                        @*<small>Member since @Convert.ToString(Session["RegistrationDate"])</small>*@
                                    </p>
                                </li>
                                <li class="user-footer">
                                    <div class="pull-left">
                                        @*                                        <a href="#" class="btn btn-default btn-flat">Profile</a>*@
                                    </div>
                                    <div class="pull-right">
                                        <a href="javascript:void(0)" area="" controller="Home" method="Logout" class="load_page btn btn-default btn-flat">Sign out</a>
                                    </div>
                                </li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </nav>
        </header>

        <aside class="main-sidebar">
            <section class="sidebar">
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="~/Content/Images/icon_512x512.png" class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">
                        <p>@Convert.ToString(Session["UserName"]) - MTE</p>
                        @*<a href="#"><i class="fa fa-circle text-success"></i> Online</a>*@
                    </div>
                </div>
                <!-- search form -->
                <form action="#" method="get" class="sidebar-form">
                    <div class="input-group">
                        <input type="text" name="q" class="form-control" placeholder="Search...">
                        <span class="input-group-btn">
                            <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>
                </form>
                <ul class="sidebar-menu" data-widget="tree">
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-dashboard"></i> <span>Dashboard</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="javascript:void(0)" controller="Home" method="index" class="load_page"><i class="fa fa-circle-o"></i> Dashboard </a></li>
                        </ul>
                    </li>
                    @if (Convert.ToString(Session["UserType"]).Equals("5") || Convert.ToString(Session["UserType"]).Equals("6"))
                    {
                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-question"></i> <span>Question</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                @if (Convert.ToString(Session["UserType"]).Equals("6"))
                                {
                                    <li style="display:none"><a href="javascript:void(0)" controller="HOME" method="Question" class="load_page"><i class="fa fa-circle-o"></i> Add Question </a></li>}
                                else
                                {
                                    <li><a href="javascript:void(0)" controller="HOME" method="Question" class="load_page"><i class="fa fa-circle-o"></i> Add Question </a></li> }
                                <li><a href="javascript:void(0)" controller="HOME" method="List" class="load_page"><i class="fa fa-circle-o"></i> Manage Question </a></li>

                                @*<li><a href="javascript:void(0)" controller="HOME" method="Question" class="load_page"><i class="fa fa-circle-o"></i> Manage Question </a></li>*@
                            </ul>
                        </li>
                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-users"></i> <span>Users</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                @if (Convert.ToString(Session["UserType"]).Equals("6") == false)
                                {
                                    <li><a href="javascript:void(0)" controller="HOME" method="Users" class="load_page"><i class="fa fa-circle-o"></i> Add Users </a></li>}

                                <li><a href="javascript:void(0)" controller="HOME" method="_ManageUsers" class="load_page"><i class="fa fa-circle-o"></i> Manage Users </a></li>
                            </ul>
                        </li>
                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-male"></i> <span>RetailOutlets</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                @if (Convert.ToString(Session["UserType"]).Equals("6") == false)
                                {
                                    <li><a href="javascript:void(0)" controller="Home" method="RetailOutlets" class="load_page"><i class="fa fa-circle-o"></i> Add  </a></li>
                                }
                                <li><a href="javascript:void(0)" controller="Home" method="RetailOutletList" class="load_page"><i class="fa fa-circle-o"></i>  List </a></li>
                            </ul>
                        </li>

                    }
                    @if (Convert.ToString(Session["UserType"]).Equals("1"))
                    {
                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-question"></i> <span>Question</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li><a href="javascript:void(0)" controller="HOME" method="Question" class="load_page"><i class="fa fa-circle-o"></i> Add Question </a></li>
                                <li><a href="javascript:void(0)" controller="HOME" method="List" class="load_page"><i class="fa fa-circle-o"></i> Manage Question </a></li>
                                @*<li><a href="javascript:void(0)" controller="HOME" method="Question" class="load_page"><i class="fa fa-circle-o"></i> Manage Question </a></li>*@
                            </ul>
                        </li>
                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-male"></i> <span>RetailOutlets</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">

                                <li><a href="javascript:void(0)" controller="HOME" method="RetailOutlets" class="load_page"><i class="fa fa-circle-o"></i> Add RetailOutlet </a></li>
                                <li><a href="javascript:void(0)" controller="HOME" method="RetailOutletList" class="load_page"><i class="fa fa-circle-o"></i> RetailOutlet List </a></li>
                            </ul>
                        </li>
                    }
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-male"></i> <span>Survey</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="javascript:void(0)" controller="HOME" method="Survey" class="load_page"><i class="fa fa-circle-o"></i> Survey List </a></li>
                        </ul>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-male"></i> <span>Rating</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="javascript:void(0)" controller="HOME" method="RatingList" class="load_page"><i class="fa fa-circle-o"></i> Rating List </a></li>
                        </ul>
                    </li>
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- =============================================== -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper" style="padding-top:0px !important;">
            <!-- Content Header (Page header) -->
            <!-- Main content -->
            <section class="content">
                <div class="alert alert-success alert-dismissible" style="right: 0;position: fixed;z-index: 999999999;display: none;margin-bottom:0px;width: 25%;padding: 10px !important;margin-right: 15px !important;">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true" style="right: 0px !important;">&times;</button>
                    <div id="SuccessMessage">Record Save Successfully.</div>
                </div>
                <div class="alertdangercustom alert alert-danger alert-dismissible" style="right: 0;position: fixed;z-index: 999999999;display: none;margin-bottom:0px;width: 25%;padding: 10px !important;margin-right: 15px !important;">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true" style="right: 0px !important;">&times;</button>
                    <div id="ErrorMessageLayout">Record Save Successfully.</div>
                </div>
                <div class="DeleteAlert alert alert-danger alert-dismissible" style="right: 0;position: fixed;z-index: 999999999;display: none;margin-bottom:0px;width: 25%;padding: 10px !important;margin-right: 15px !important;">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true" style="right: 0px !important;">&times;</button>
                    <div id="DeleteErrorMessageLayout">Record Deleted Successfully.</div>
                </div>
                <!-- Default box -->
                @RenderBody()
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer" style="padding-bottom:1px;">
            <div class="pull-right hidden-xs">
                <b>Version</b> 2.4.0
            </div>
            <strong>Copyright &copy; 2018-2019 <a href="#">Multiplyig of Eyes</a>.</strong> All rights
            reserved.
        </footer>
        <div class="control-sidebar-bg"></div>
    </div>
